    //- Apply for a Guide
    section#section-apply.section-apply
      .row
        .apply
          .apply__form
            form.form.form--apply
              .u-margin-bottom-big
                h2.heading-secondary Become A Guide

              .form__group
                label.form__label(for='name') Username
                input#name.form__input(
                  type='text',
                  name='name',
                  placeholder='FirstName LastName',
                  required
